<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.RepayDashBoardUI"
    tools:showIn="@layout/activity_repay_dash_board_ui">
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingStart="@dimen/count_5dp"
        android:paddingEnd="@dimen/count_5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLoanCollections"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/count_110dp"
            app:cardCornerRadius="@dimen/count_6dp"
            app:cardElevation="@dimen/count_8dp"
            android:layout_margin="@dimen/count_6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/count_60dp"
                    android:layout_height="@dimen/count_60dp"
                    android:padding="@dimen/count_12dp"
                    android:background="@drawable/cerclebackgroundgreen"
                    android:src="@drawable/clipboards_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:layout_marginTop="@dimen/count_10dp"
                    android:textSize="@dimen/count_13sp"
                    android:text="Loan Collection"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>