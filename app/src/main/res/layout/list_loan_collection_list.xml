<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/count_4dp"
    android:paddingEnd="@dimen/count_4dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLoanCollectionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingStart="@dimen/count_2dp"
        android:paddingEnd="@dimen/count_2dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/count_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/count_5dp"
                android:paddingStart="@dimen/count_4dp"
                android:paddingEnd="@dimen/count_4dp"
                android:paddingBottom="@dimen/count_5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Id :"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />-->

                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name :"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Installment No :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="65"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--<TextView
                        android:id="@+id/id_loanId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />-->

                  <!--  <TextView
                        android:id="@+id/idMemberName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />-->

                    <TextView
                        android:id="@+id/idInstallmentNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:id="@+id/id_dueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:id="@+id/idInstallmentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <Button
                        android:id="@+id/btnPostCollection"
                        android:layout_marginTop="@dimen/count_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/count_30dp"
                        android:background="@color/colorNew"
                        android:text="Collect"
                        android:textColor="@color/colorWhite">

                    </Button>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/count_1dp"
                android:background="@color/colorGreen"
                android:paddingTop="@dimen/count_1dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>