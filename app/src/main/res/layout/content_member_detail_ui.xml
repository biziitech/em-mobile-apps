<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MemberDetailUI"
    tools:showIn="@layout/activity_member_detail_ui">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/count_10dp"
        android:paddingEnd="@dimen/count_10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member Details"
            android:layout_marginTop="@dimen/count_10dp"
            android:textAlignment="center"
            android:textColor="@color/colorNew"
            android:textSize="@dimen/count_18sp"
            android:textStyle="bold" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/count_5dp"
        android:paddingEnd="@dimen/count_5dp"
        android:layout_marginBottom="@dimen/count_8dp"
        android:layout_marginTop="@dimen/count_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="Name"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="Father Name"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="Age"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="NID No"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="Mobile No"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="Address"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="Inspection Date"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_mName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/count_5dp"
                android:paddingTop="@dimen/count_5dp"
                android:text="--"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_mFatherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/count_5dp"
                android:paddingBottom="@dimen/count_5dp"
                android:text="--"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_mAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:paddingTop="@dimen/count_5dp"
                android:paddingBottom="@dimen/count_5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_mNid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/colorNew"
                android:paddingTop="@dimen/count_5dp"
                android:paddingBottom="@dimen/count_5dp"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_mMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/colorNew"
                android:paddingTop="@dimen/count_5dp"
                android:paddingBottom="@dimen/count_5dp"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_mAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:paddingTop="@dimen/count_5dp"
                android:paddingBottom="@dimen/count_5dp"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtView_mInspectionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:paddingTop="@dimen/count_5dp"
                android:paddingBottom="@dimen/count_5dp"
                android:textColor="@color/colorNew"
                android:textSize="@dimen/count_11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/count_10dp"
            android:background="@color/colorNew"
            android:text="Verify"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>