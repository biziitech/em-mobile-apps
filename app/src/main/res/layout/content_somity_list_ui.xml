<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.SomityListUI"
    tools:showIn="@layout/activity_somity_list_ui">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_somityList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#0e0e0e"
            android:dividerHeight="@dimen/count_1dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/empty_rcView_somityList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Data Found"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/count_18sp"
            />

    </LinearLayout>
</LinearLayout>