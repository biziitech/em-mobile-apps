<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingStart="@dimen/count_4dp"
        android:paddingEnd="@dimen/count_4dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/count_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="40"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="নাম :"
                            android:paddingTop="@dimen/count_3dp"
                            android:paddingBottom="@dimen/count_3dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/count_3dp"
                            android:paddingBottom="@dimen/count_3dp"
                            android:text="মোবাইল নম্বর :"

                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="পিতা/স্বামীর নাম :"
                            android:paddingTop="@dimen/count_3dp"
                            android:paddingBottom="@dimen/count_3dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/memberName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/count_3dp"
                            android:paddingBottom="@dimen/count_3dp"
                            android:text="name"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                        <TextView
                            android:id="@+id/tvMobileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/count_3dp"
                            android:paddingBottom="@dimen/count_3dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                        <TextView
                            android:id="@+id/fatherOrHusband"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/count_3dp"
                            android:paddingBottom="@dimen/count_3dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/count_5dp"
                    android:layout_marginTop="@dimen/count_5dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnInspectionEntry"
                        android:layout_width="0dp"
                        android:paddingEnd="@dimen/count_6dp"
                        android:layout_weight="3"
                        android:layout_height="@dimen/count_30dp"
                        android:text="ইন্সপেকশন এন্ট্রি"
                        android:layout_marginEnd="@dimen/count_4dp"
                        android:background="@drawable/button_shape2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/count_10sp" />

                    <Button
                        android:id="@+id/btnCaptureImage"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="@dimen/count_30dp"
                        android:paddingEnd="@dimen/count_4dp"
                        android:text="ছবি তুলুন"
                        android:layout_marginLeft="@dimen/count_4dp"
                        android:textAlignment="center"
                        android:background="@drawable/button_shape2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/count_10sp" />

                    <Button
                        android:id="@+id/btnFinalSubmit"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="@dimen/count_30dp"
                        android:text="চুড়ান্ত দাখিল"
                        android:layout_marginLeft="@dimen/count_4dp"
                        android:textAlignment="center"
                        android:background="@drawable/button_shape4"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/count_10sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/count_1dp"
                    android:background="#009688"
                    android:paddingTop="@dimen/count_1dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>