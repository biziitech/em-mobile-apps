<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/count_4dp"
    android:paddingEnd="@dimen/count_4dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingStart="@dimen/count_2dp"
        android:paddingEnd="@dimen/count_2dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/count_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/count_4dp"
                android:paddingTop="@dimen/count_5dp"
                android:paddingEnd="@dimen/count_4dp"
                android:paddingBottom="@dimen/count_5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="কিস্তির পরিমাণ :"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/count_5dp"
                        android:text="কিস্তির তারিখ :"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="স্ট্যাটাস :"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="পরিশোধিত তারিখ :"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/installment_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="payment_amount"
                        android:textAlignment="center"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />

                    <TextView
                        android:id="@+id/payment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="২২৮৫"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />
                    <TextView
                        android:id="@+id/txt_payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textAlignment="center"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />
                    <TextView
                        android:id="@+id/id_dueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="id_dueDate"
                        android:textAlignment="center"
                        android:paddingBottom="@dimen/count_5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_10sp" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/count_1dp"
                android:background="#009688"
                android:paddingTop="@dimen/count_1dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>