<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.LoanInfoUI"
    tools:showIn="@layout/activity_loan_info_ui">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/count_5dp"
        android:paddingStart="@dimen/count_6dp"
        android:paddingEnd="@dimen/count_6dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_loan_info_List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#0e0e0e"
            android:dividerHeight="@dimen/count_1dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/empty_rcView_loan_info_List"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="no data found"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/count_15sp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>