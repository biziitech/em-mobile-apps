<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.DisplaySubmittedImgUi"
    tools:showIn="@layout/activity_display_submitted_img_ui">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/count_6dp"
        android:paddingTop="@dimen/count_5dp"
        android:paddingEnd="@dimen/count_6dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_display_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#0e0e0e"
            android:dividerHeight="@dimen/count_1dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/empty_rcView_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Image Found"
            android:textColor="@color/btnColorRed"
            android:textSize="@dimen/count_20sp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>