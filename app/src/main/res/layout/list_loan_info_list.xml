<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/count_4dp"
    android:paddingEnd="@dimen/count_4dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingStart="@dimen/count_2dp"
        android:paddingEnd="@dimen/count_2dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/count_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/count_5dp"
                android:paddingStart="@dimen/count_4dp"
                android:paddingEnd="@dimen/count_4dp"
                android:paddingBottom="@dimen/count_5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="35"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="লোন আইডি :"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ওয়েবার আইডি :"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="মেশিন টাইপ  :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="মেশিনের নাম :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="লোনের পরিমান :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ইনস্টলমেন্ট নং :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="চার্জ রেট :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="স্টেটাস:"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="প্রজেক্টের নাম :"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="65"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLoan_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Id"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:id="@+id/tv_waberId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="weberId"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:id="@+id/tvMachineType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mechinetype"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                    <TextView
                        android:id="@+id/tvMachineName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="machineName."
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:id="@+id/tvLoanAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Amount."
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvInstallNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Installment no."
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/count_11sp" />

                        <ImageView
                            android:layout_width="@dimen/count_100dp"
                            android:layout_marginLeft="@dimen/count_15dp"
                            android:src="@drawable/next"
                            android:layout_height="@dimen/count_15dp"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvChargeRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charge Rate."
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:id="@+id/tvApplicationStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />

                    <TextView
                        android:id="@+id/tvProjectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Installment Rate."
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/count_11sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/count_1dp"
                android:background="#009688"
                android:paddingTop="@dimen/count_1dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>